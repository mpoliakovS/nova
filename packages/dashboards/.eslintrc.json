{
    "extends": "../../.eslintrc.json",
    "overrides": [
        {
            "files": ["*.ts"],
            "parserOptions": {
                "createDefaultProgram": true,
                "project": ["tsconfig.json"]
            },
            "settings": {
                "import/parsers": {
                    "@typescript-eslint/parser": [".ts", ".html"]
                },
                "import/resolver": {
                    "node": {
                        "extensions": [".js", ".ts"],
                        "paths": ["./examples/src/components"]
                    },
                    "typescript": {
                        "project": ["tsconfig.json"]
                    }
                }
            }
        }
    ]
}
